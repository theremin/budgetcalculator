
<button data-reveal-id="myModal" data-reveal>Click Me For A Modal</button>>
<div id="myModal" class="reveal-modal" data-reveal>
  
    <div class="row">
    <div class="large-12 show-for-middle columns">&nbsp;</div>
    <div class="small-2 middle-2 large-2 columns">&nbsp;</div>
    <div class="small-8 middle-8 large-8 columns" role="content">
        
        <div class="panel">
            {{#view 'form.foundation'}}
            <fieldset>
                <legend>User Login</legend>
                <div class="row">
                    <div class="large-4 columns">
                        <label>User name:<small>required</small>
                            {{view 'input.alphanumeric' valueBinding="newUser" placeholder="User" required="required"}}                         
                        </label>
                        <small class="error">Name is required and must be a string.</small>
                    </div>
                    <div class="large-4 columns">
                        <label>Password:
                            {{view Ember.TextField type="password" valueBinding="password" placeholder="Password" required="required" pattern="password"}} 
                        </label>
                    </div>
                    <div class="large-4 columns">
                        
                        <button type="submit">Submit</button>
                    </div>
                </div>
            </fieldset>         
            {{/view}}
        </div>
    </div>
    </div>

  <a class="close-reveal-modal">&#215;</a>
</div>
